<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutConfigurarPreguntas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="24dp"
    android:paddingTop="48dp">

    <!-- PREGUNTA -->
    <EditText
        android:id="@+id/preguntaConfiguracion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe la pregunta"
        android:textColor="#673AB7"/>

    <!-- RESPUESTA 1 -->
    <LinearLayout
        android:id="@+id/layoutRespuesta1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/correcta1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/respuesta1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Respuesta 1"
            android:textColor="#673AB7"/>
    </LinearLayout>

    <!-- RESPUESTA 2 -->
    <LinearLayout
        android:id="@+id/layoutRespuesta2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <RadioButton
            android:id="@+id/correcta2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/respuesta2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Respuesta 2"
            android:textColor="#673AB7"/>
    </LinearLayout>

    <!-- RESPUESTA 3 -->
    <LinearLayout
        android:id="@+id/layoutRespuesta3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <RadioButton
            android:id="@+id/correcta3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/respuesta3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Respuesta 3"
            android:textColor="#673AB7"/>
    </LinearLayout>

    <!-- RESPUESTA 4 -->
    <LinearLayout
        android:id="@+id/layoutRespuesta4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <RadioButton
            android:id="@+id/correcta4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/respuesta4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Respuesta 4"
            android:textColor="#673AB7"/>
    </LinearLayout>

    <!-- BOTÓN GUARDAR -->
    <Button
        android:id="@+id/guardarPregunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:layout_marginTop="16dp"
        android:backgroundTint="#673AB7"
        android:textColor="#FFFFFF"/>

    <!-- BOTÓN VOLVER AL MENU -->
    <Button
        android:id="@+id/btnVolverMenuConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver al menú"
        android:backgroundTint="#673AB7"
        android:textColor="#FFFFFF"/>

</LinearLayout>
